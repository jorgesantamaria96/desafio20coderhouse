<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Productos - Desafio 20 Coder</title>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="./index.css" />
  </head>
  <body>

    <%- include('navbar'); -%>
    <div class="m-5">
      <div class="containerTitle">
          
      </div>

      <% if (error) { %>
      <div class="p-1">
          <h4 class="alert alert-danger"><%= message %></h2>
      </div>
      <% } %>

      <div class="row">
        <div class="col-md-3">
          <form 
            id="form-products"
            class="card card-body m-auto"
            enctype="multipart/form-data"
          >
            <h1 class="card-title">Ingrese un producto</h1>
            <div class="row mb-4">
                <label name="label_name" class="form-label">Nombre</label>
                <input type="text" id="name" class="form-control" autofocus/>
            </div>
  
            <div class="row mb-4">
                <label name="label_price" class="form-label">Precio</label>
                <input type="text" id="price" class="form-control" />
            </div>
  
            <div class="row mb-4">
                <label name="label_thumbnail" class="form-label">Imagen (URL)</label>
                <input type="text" id="thumbnail" class="form-control" />
            </div>
  
            <div class="row mt-4">
                <button type="submit" class="btn btn-primary" name="button">Crear</button>
            </div>
          </form>
        </div>

        <div class="col-md-9">
          <div class="card-title">
            <h1>Tabla de productos</h1>
          </div>

          <div id="prods"></div>
        </div>
      </div>      
  </div>

  <script src="/socket.io/socket.io.js"></script>
  <script src="./productos.js"></script>
  </body>
</html>
