<% if (renderTable) { %>
<div class="containerDiv">
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Price</th>
                <th scope="col">Thumbnail</th>
            </tr>
        </thead>
        <tbody>
            <% datos.forEach(function(dato){ %>
            <tr>
                <td>
                    <%= dato.name %>
                </td>
                <td>
                    $ <%= dato.price %>
                </td>
                <td>
                    <img src=<%= dato.thumbnail %> style="width: 150px; height: 150px;" />
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>
<% } else { %>
<div class="p-5">
    <h2 class="alert alert-warning text-center">No hay productos disponibles</h2>
</div>
<% } %>