<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chat - Desafio 20 Coder</title>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="./index.css" />
  </head>
  <body>
    <%- include('navbar'); -%>
    <div class="m-3">
      <div class="title" style="font-size: 40px; margin-left: 20px;">Chat</div>
    </div>

    <div class="row">
      <div class="col-md-3">
        <div class="containerDiv">
          <label class="form-label"
            ><strong>Ingrese su nuevo mensaje</strong></label
          >
          <form class="form" id="myFormChat">
            <div style="padding-top: 20px; padding-bottom: 20px">
              <!-- EMAIL -->
              <label for="email" class="form-label">Email</label>
              <input
                id="email"
                type="email"
                class="form-control"
                placeholder="Tu email..."
              />

              <!-- NAME -->
              <label for="name" class="form-label">Name</label>
              <input
                id="name"
                type="text"
                class="form-control"
                placeholder="Tu nombre..."
              />

              <!-- LAST NAME -->
              <label for="lastname" class="form-label">Last Name</label>
              <input
                id="lastname"
                type="text"
                class="form-control"
                placeholder="Tu apellido..."
              />

              <!-- AGE -->
              <label for="age" class="form-label">Age</label>
              <input
                id="age"
                type="text"
                class="form-control"
                placeholder="Tu edad..."
              />

              <!-- NICKNAME -->
              <label for="nickname" class="form-label">Alias</label>
              <input
                id="nickname"
                type="text"
                class="form-control"
                placeholder="Tu nickname..."
              />

              <!-- AVATAR -->
              <label for="avatar" class="form-label">Avatar</label>
              <input id="avatar" type="text" class="form-control" />

              <!-- MENSAJE -->
              <label class="form-label">Mensaje</label>
              <input
                id="texto"
                type="text"
                class="form-control"
                placeholder="Escribe..."
              />

              <!-- SUBMIT -->
              <button type="submit" class="btn btn-primary mt-4" id="btn">
                Enviar
              </button>
            </div>
          </form>
        </div>
      </div>
      <div class="chat col-md-9">
        <div id="messagesChat" class="chat-container"></div>
      </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="./chat.js"></script>
  </body>
</html>
